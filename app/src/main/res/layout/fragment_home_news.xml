                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST [에디터픽]"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"
