<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LightTheme.Cheum_STAC" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorSurface">@android:color/white</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textColor">@color/black</item>
        <!--        타이틀바 없애기-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.Cheum_STAC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.Cheum_STAC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightTheme.Cheum_STAC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
